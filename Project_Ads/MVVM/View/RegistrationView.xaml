<UserControl x:Class="Project_Ads.MVVM.View.RegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Ads.MVVM.View"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Регистрация"
                       Foreground="#3b3b3b"
                       FontSize="38"
                       FontFamily="Arial"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            <StackPanel HorizontalAlignment="Center">
                <TextBox Text="{Binding ElementName=UserName, Path=Text}"
                         Uid="UserName"
                         Margin="0,0,0,25"
                         Width="400"
                         IsEnabled="False"
                         Style="{StaticResource BottomBorderTextBox}"/>
                <TextBox x:Name="UserName"
                         Margin="6,-60,7,3"
                         FontSize="20"
                         Background="Transparent"
                         Foreground="Transparent"
                         BorderThickness="0"/>
                <TextBox Text="{Binding ElementName=Login, Path=Text}"
                         Uid="Login"
                         IsEnabled="False"
                         Style="{StaticResource BottomBorderTextBox}"
                         Margin="0,0,0,25"
                         Width="400"/>
                <TextBox x:Name="Login"
                         Margin="6,-60,7,3"
                         FontSize="20"
                         Background="Transparent"
                         Foreground="Transparent"
                         BorderThickness="0"/>
                <TextBox Text="{Binding ElementName=Password, Path=Text}" 
                         Uid="Password"
                         IsEnabled="False"
                         Style="{StaticResource BottomBorderTextBox}"
                         Margin="0,0,0,25"
                         Width="400"/>
                <TextBox x:Name="Password"
                         Margin="6,-60,7,3"
                         FontSize="20"
                         Background="Transparent"
                         Foreground="Transparent"
                         BorderThickness="0"/>
                <TextBox Text="{Binding ElementName=Phone, Path=Text}"
                         Uid="Phone"
                         IsEnabled="False"
                         Style="{StaticResource BottomBorderTextBox}"
                         Margin="0,0,0,25"
                         Width="400"/>
                <TextBox x:Name="Phone"
                         Margin="6,-60,7,3"
                         FontSize="20"
                         Background="Transparent"
                         Foreground="Transparent"
                         BorderThickness="0"/>
            </StackPanel>
            <Button Style="{StaticResource AuthorizationButtonTheme}"
                    Content="Зарегистрироваться"
                    Height="40"
                    Width="230"
                    Click="OnRegisterUser"/>
            <TextBlock Name="LoginExists"
                       Text="Логин уже занят!"
                       Foreground="Red"
                       FontSize="20"
                       Visibility="Hidden"
                       HorizontalAlignment="Center"
                       Margin="0 30 0 30"/>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center"
                    Margin="0,0,0,0">
            <Label>
                <Hyperlink Click="ProfileViewOpen"
                           FontSize="14" FontFamily="Arial">
                    Я уже зарегистрирован
                </Hyperlink>
            </Label>
        </StackPanel>
    </Grid>
</UserControl>
