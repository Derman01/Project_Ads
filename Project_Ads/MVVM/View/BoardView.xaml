<UserControl x:Class="Project_Ads.MVVM.View.BoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             mc:Ignorable="d"
             Name="Board"
             d:Height="500">
    <Grid Background="White">
        <DockPanel>
            <Border DockPanel.Dock="Top" Height="80" Margin="10" Padding="15"
                    CornerRadius="40" BorderBrush="#3292D0" BorderThickness="2">
                <DockPanel>
                    <Border Background="#F1F1F1" CornerRadius="20" 
                        Height="50" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBox MinWidth="200" MaxWidth="300" Background="Transparent" Height="50" 
                                 Style="{StaticResource placeHolder}"
                                 Padding="10 0 10 0" BorderBrush="Transparent" 
                                 FontSize="18" FontWeight="Regular"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                  Tag="Поиск по номеру.."/>
                            <Image Panel.ZIndex="4" Width="40" Height="40" Stretch="Fill" Source="/MVVM/View/icons8_search_60px_2.png" Margin="0,0,10,0"/>

                        </StackPanel>
                    </Border>
                    <Button Style="{StaticResource AuthorizationButtonTheme}"
                            Tag="23"
                            VerticalAlignment="Center"        
                            Height="46" Padding="20 0 20 0" Margin="30 0 0 0 "
                            Content="+Фильтры"/>
                    <Button Style="{StaticResource AuthorizationButtonTheme}"
                            VerticalAlignment="Center"
                            Height="46"
                            Tag="23" Padding="20 0 20 0"
                            HorizontalAlignment="Right"
                            Content="Создать объявление"/>
                </DockPanel>
            </Border>
            <ListBox x:Name="advertisementsList"
                    HorizontalContentAlignment="Stretch"
                    BorderThickness="0"  IsHitTestVisible="False">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="IsTabStop" Value="False" />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate >
                        <Grid>
                            <Border VerticalAlignment="Center" 
                                    CornerRadius="15"
                                    BorderBrush="#3292D0"
                                    BorderThickness="2"
                                    Padding="10"
                                    Margin="0,5,0,5">
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <Border BorderBrush="#282828"
                                    CornerRadius="90"
                                    Width="180"
                                    Height="180"
                                    VerticalAlignment="Center">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Path=ImageUrl}" Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>
                                    <StackPanel Margin="30 0 0 0" Orientation="Horizontal">
                                        <StackPanel Width="400">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontWeight="Bold"
                                                   FontSize="24" Text="{Binding Path=GetStringTypeAdvertisement}"/>
                                                <TextBlock Text=": " FontSize="24" FontWeight="Bold"/>
                                                <TextBlock FontWeight="Medium" VerticalAlignment="Bottom"
                                                   FontSize="22" Text="{Binding Path=GetStringTypeAnimal}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                                <TextBlock FontWeight="Bold" FontSize="18" Text="Окрас: "/>
                                                <TextBlock Text="{Binding GetStringColorAnimal}" FontSize="18" FontWeight="Regular"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                                <TextBlock FontWeight="Bold" FontSize="18" Text="Локация: "/>
                                                <TextBlock Text="{Binding LocationFind}" FontSize="18" FontWeight="Regular"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                                <TextBlock FontWeight="Bold" FontSize="18" Text="Дата: "/>
                                                <TextBlock Text="{Binding GetFormatStringDateFind}" FontSize="18" FontWeight="Regular"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                                <TextBlock FontWeight="Bold" FontSize="18" Text="Номер телефона: "/>
                                                <TextBlock Text="{Binding Phone}" FontSize="18" FontWeight="Regular"/>
                                            </StackPanel>

                                        </StackPanel>
                                        <StackPanel Margin="20 0 0 0">
                                            <TextBlock Text="Дополнительные приметы"
                                               FontWeight="Bold" FontSize="22"/>
                                            <TextBlock Text="{Binding Marks}" MaxWidth="500"
                                               TextWrapping="Wrap"
                                               FontSize="18" FontWeight="Regular"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <Rectangle Height="1" Stroke="Black" Width="7"/>
            </ListBox>
        </DockPanel>
    </Grid>
</UserControl>
